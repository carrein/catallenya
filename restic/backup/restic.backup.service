Description=Daily Restic Backup
After=network-online.target
OnSuccess=restic.backup.success.ntfy.service
OnFailure=restic.backup.failure.ntfy.service

[Service]
Type=oneshot
User=root
Environment="RCLONE_CONFIG=/zpool/catallenya/rclone/.rclone.conf"
ExecStart=/zpool/catallenya/restic/backup/restic.backup.sh