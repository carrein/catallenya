[Unit]
Description=Restic Backup
Requires=network-online.target
OnSuccess=system-ntfy@restic.backup.service
OnFailure=system-ntfy@restic.backup.service

[Service]
Type=oneshot
User=carrein
Group=carrein
Environment="RCLONE_CONFIG=/zpool/catallenya/rclone/.rclone.conf"
ExecStart=/zpool/catallenya/restic/backup/restic.backup.sh
StandardOutput=journal
